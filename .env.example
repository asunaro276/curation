# Claude API (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Notification Settings
# Comma-separated list of enabled notifiers: slack, line
# Default: slack (for backward compatibility)
ENABLED_NOTIFIERS=slack

# Slack Configuration (required if 'slack' is in ENABLED_NOTIFIERS)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# LINE Configuration (required if 'line' is in ENABLED_NOTIFIERS)
# Get your Channel Access Token from LINE Developers Console
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# LINE Target ID: Use either LINE_USER_ID or LINE_GROUP_ID
# - For individual user: Get User ID from LINE chat
# - For group: Get Group ID from LINE group chat
LINE_USER_ID=Uxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# LINE_GROUP_ID=Cxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Optional: Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Optional: Claude model to use
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Optional: Max articles per source
MAX_ARTICLES_PER_SOURCE=5
